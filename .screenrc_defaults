# status line at the bottom
hardstatus on
hardstatus alwayslastline
hardstatus string "%{.bW}%-w%{.rW}%f%n %t%{-}%+w %=%{..G}[%H %l] %{..Y} %m/%d %c "
defscrollback 100000
termcapinfo xterm-256color|xterm-color|xterm|xterms|xs|rxvt ti@:te@
defshell -bash
screen -t editor 0
screen -t runner 1
screen -t remote1 2
screen -t remote2 3
screen -t remote3 4
